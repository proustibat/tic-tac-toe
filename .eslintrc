{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "shelljs": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-cond-assign": 1,
    "no-console": 0,
    "no-dupe-keys": 1,
    "no-empty": 1,
    "no-extra-semi": 1,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "valid-typeof": 2,

    "curly": [2, "all"],
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-else-return": 1,
    "no-eval": 2,
    "new-cap": [ 1, {
      "newIsCap": true,
      "capIsNew": false
    }],
    "no-floating-decimal": 1,
    "no-iterator": 1,
    "no-lone-blocks": 1,
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "ImportDeclaration": true
      }
    }],
    "no-redeclare": 1,
    "wrap-iife": [1, "inside"],
    "yoda": 0,
    "no-undef": 1,
    "no-undef-init": 1,
    "no-unused-vars": 1,
    "no-use-before-define": [1, "nofunc"],
    "no-mixed-requires": 0,
    "no-path-concat": 1,
    "indent": [2, 4, {"SwitchCase": 1}],
    "quotes": [1, "single"],
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "camelcase": [2, {"properties": "always"}],
    "comma-spacing": [2, { "before": false, "after": true }],
    "consistent-this": [0, "self"],
    "eol-last": 1,
    "no-array-constructor": 1,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 2,
    "no-spaced-func": 1,
    "space-before-function-paren": [2, "never"],
    "keyword-spacing": [1, {"before": true, "after": true, "overrides": {}}],
    "object-curly-spacing": [2, "always"]
  },
  "globals": {
    "$": false,
    "require": false,
    "module":  false,
    "console": false,
    "Materialize": false
  }
}
